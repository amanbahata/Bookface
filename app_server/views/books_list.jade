extends layout

block content
    #banner.page-header
        .row
            .col-lg-6
                h3= pageHeader.title

    .row
        .col-xs-12.col-sm-8
            .error= message
            #{loggedIn}
                //if loggedIn
                //    a.btn.btn-default.pull-right(href="/authors/#{author._id}/new") Add Books
                //else
                //    a.btn.btn-default.pull-right(href="/login") Log-in
            .row.list-group
                each book in books
                    .col-xs-12.list-group-item
                        p Rated: #{book.bookRating}
                        p #{book.title}
                        h4
                            a(href="/books/#{book._id}")= book.title
                        p Description: #{book.description}

