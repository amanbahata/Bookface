
extends layout
block content
    .row.page-header
        .col-lg-12
            h3= pageHeader.title
    .row
        .col-xs-12.col-md-6
            form.form-horizontal(action="", method="post", role="form")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="bookTitle") Book Title
                    .col-xs-12.col-sm-10
                        input#bookTitle.form-control(name="bookTitle")
                .form-group
                    label.col-sm-2.control-label(for="description") Book Description
                    .col-sm-10
                        textarea#description.form-control(name="description", rows="5")
                button.btn.btn-default.pull-right Add my Book