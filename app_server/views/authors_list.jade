extends layout

block content
    #banner.page-header
    .row
        h1 Welcome to BookFace,
        p
            | Bookface is small social networking site for people who love books.
        p
            | It has been built using JavaScript and it runs on the Node.js platform.
            | It uses Express framework and MongoDB for data persistence.

        .col-lg-6
            h3= pageHeader.title
        .row
            .col-xs-12.col-md-9
                .error= message
                    #{loggedIn}
                        if loggedIn
                            a.btn.btn-default.pull-right(href="/newauthor") Add Author
                        else
                            small You must log in to add authors.
    .row
        .col-xs-12.col-md-9
            .panel-body
                each author in authors
                    .row
                        .col-xs-12
                        .col-sm-12
                            .row
                                .list-group-item
                                    h4
                                      a(href="/author/#{author}")= author