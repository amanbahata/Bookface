
extends layout

block content
    .row.page-header
        .col-lg-12
            h3= pageHeader.title
    .row
        .col-xs-12.col-md-9
            form.form-horizontal(action="", method="post", role="form")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="author") Author Name
                    .col-xs-12.col-sm-10
                        input#author.form-control(name="author")
                .form-group
                    label.col-xs-10.col-sm-2.control-label(for="title") Written Book title
                    .col-xs-12.col-sm-10
                        input#title.form-control(name="title")
                .form-group
                    label.col-sm-2.control-label(for="description") Book Description
                    .col-sm-10
                        textarea#description.form-control(name="description", rows="5")
                button.btn.btn-default.pull-right Add new author
