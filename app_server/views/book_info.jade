extends layout

block content
  .row.page-header: .col-lg-12
    h1= pageHeader.title
  .row
    .col-xs-12.col-md-9
      .row
       .col-xs-12.col-sm-6
        p.author= book.author
        p.rating= book.rating
        .row
         .col-xs-12
          .panel.panel-primary.review-panel
           .panel-heading
            a.btn.btn-default.pull-right(href="/book/review/new") Add Review
            p.panel-title Reader reviews
             .panel-body.review-container
               each review in book.reviews
                 .row
                   .review
                     .well.well-sm.review-header
                       span.rating= review.rating
                      .row
                       span.reviewAuthor #{review.author}
                      .row
                       small.reviewTimestamp #{review.timestamp}
                     .col-xs-12
                       p !{(review.reviewText).replace(/\n/g, '<br/>')}
